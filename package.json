{
  "name": "edi-titan-desktop-app",
  "version": "1.0.0",
  "description": "EDI Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev:electron": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build:mac && npm run build:win && npm run build:linux",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "edi-titan.desktop",
    "productName": "EDI Desktop",
    "directories": {
      "output": "../dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "author": "Your Company",
  "license": "MIT"
}