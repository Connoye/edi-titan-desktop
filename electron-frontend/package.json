{
  "name": "edi-titan-desktop-app",
  "version": "1.0.0",
  "description": "EDI Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev:electron": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build:mac && npm run build:win && npm run build:linux",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "edi-titan.desktop",
    "productName": "EDI Desktop",
    "directories": {
      "output": "../dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "electron": "^38.2.1",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.3"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  }
}